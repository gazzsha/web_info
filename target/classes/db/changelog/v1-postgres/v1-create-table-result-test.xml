<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="Rysaev Aydar">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="result_test"/>
            </not>
        </preConditions>
        <createTable tableName="result_test">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="count_true_answer" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="test_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints foreignKeyName="users_result_test_fk"
                             referencedTableName="users"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
